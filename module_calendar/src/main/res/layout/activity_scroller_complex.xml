<?xml version="1.0" encoding="utf-8"?>
<com.yesway.calendarview.YMTransitRootView
    android:id="@+id/trv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:calendar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ComplexDemoActivity">
    <LinearLayout
        android:id="@+id/layout_month_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="四"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="五"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六"
                android:textSize="12sp"
                android:textColor="#2a2a2a"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#dedede"
            />
        <com.yesway.calendarview.month.ScrollerMonthView
            android:id="@+id/scrollMonthView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            calendar:drawRoundRect="true"
            calendar:showWeekLabel="false"
            calendar:showMonthTitle="false"
            calendar:showWeekDivider="false"
            />
    </LinearLayout>

    <com.yesway.calendarview.year.ScrollerYearView
        xmlns:calendar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollYearView"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        calendar:showYearLunarLabel="false"
        calendar:yearHeaderTextSize="15sp"
        calendar:yearHeaderTextColor="#2a2a2a"
        calendar:yearHeaderTextHeight="90dp"
        calendar:monthLabelTextColor="#53b9f5"
        calendar:monthLabelTextSize="15sp"
        />

</com.yesway.calendarview.YMTransitRootView>